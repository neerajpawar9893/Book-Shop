<%- include('../includes/head.ejs')%>

<%- include('../includes/navbar.ejs')%>

<!-- <h1>No Products....</h1> -->
<% if (message) { %>
<div style="text-align: center;" class="alert dialog box"><%= message %></div>
<% } %>
<% if(products.length != 0) { %>
    
<div class="container row" style="margin-inline-start: 20px; margin-top: 15px;">
    <% for (let prods of products) { %>
    <div class="card mycard1">
        <h4 style="margin-top: 5px;" class="card-title"><%= prods.productTitle%></h4>

      <img style="height: 200px;"  src="/<%= prods.image %>">
      <div class="card-body">
        <p class="card-text"><%= prods.price%></p>
     

        <p class="card-text"><%= prods.productDesc%></p>
        <a class="btn btn-outline-info" href="/admin/edit-product/<%= prods._id%>?edit=true">Edit</a>
        <form action="/admin/delete-product" method="POST">
            <input type="hidden" name="productId" value="<%= prods._id%>">
        <button onclick="return ConfirmDelete()" class="btn btn-outline-danger" type="submit">Delete</button>
        </form>

      </div>
    </div>
    <div style="margin-inline-start: 40px;">
    </div>


    <% } %>
    <div style="margin-top: 10px;"></div>
  </div>


  <% } else { %>
    <h1>No Product Found...</h1>
    <% } %>

    <%- include('../includes/footer.ejs')%>